{
    "comment": "Be aware that not all the settings suggested here could be modified as you like. Read comments on sense2gol_pizero.py and Sense2GoL manuals for more information.",
    "mounting-support":{
        "pivot-height-m":0.56,
        "water-vertical-distance-m":0,
        "rx-antenna-offset-m":0.12
    },
    "antennas":{
        "min-scan-angle-deg":-15,
        "max-scan-angle-deg":15
    },
    "accelerometer":{
        "averages":20
    },
    "picoscope":{
        "acquisition-time-s":0.5,
        "sampling-frequency-Hz":10e3,
        "channels-info":"Channel A is IFI, Channel B is IFQ. Possible values for channel range: 20e-3, 50e-3, 100e-3, 200e-3, 500e-3, 1, 2, 5, 10, 20.",
        "channel-a-range-v":500e-3,
        "channel-b-range-v":500e-3,
        "trigger-delay-s":1
    },
    "signal-processing":{
        "complex-fft":true,
        "fft-resolution-Hz":1,
        "fft-smoothing":true,
        "smoothing-window-Hz":10,
        "bandwidth-threshold-dB":6,
        "hanning-windowing":true,
        "zero-forcing":true,
        "frequency-min-Hz":-1000,
        "frequency-max-Hz":1000,
        "print-fft-info":true,
        "offset-removal":true
    },
    "raspberry-3b-plus":{
        "pwm-board-pin":7,
        "pwm-frequency":50,
        "raw-data":true,
        "show-figure":false,
        "save-plots":true,
        "png-plot":true,
        "pdf-plot":false,
        "plot-path":"unipg_prototype/raw_samples/",
        "realtime-measurements":true,
        "target-threshold-dBV":-90.0,
        "min-beam-angle":-90,
        "max-beam-angle":90,
        "directions":5
    },
    "statistical-analysis":{
        "enabling":true,
        "episodes-number":3
    }
}